@inject NavigationManager NavigationManager


<MudNavMenu Margin="Margin.None" Color="Color.Error">
	<AuthorizeView>
		<Authorized>
			<MudNavLink IconColor="Color.Tertiary" Match="NavLinkMatch.Prefix" Href="/Identity/Account/Logout" Icon="@Icons.Material.Filled.Logout">Logout</MudNavLink>
		</Authorized>

		<NotAuthorized>
			<MudNavLink IconColor="Color.Tertiary" Match="NavLinkMatch.Prefix" Href="/Identity/Account/Login" Icon="@Icons.Material.Filled.Login">Login</MudNavLink>
			<MudNavLink IconColor="Color.Tertiary" Match="NavLinkMatch.Prefix" Href="/Identity/Account/Register" Icon="@Icons.Material.Filled.AppRegistration">Register</MudNavLink>
		</NotAuthorized>
	</AuthorizeView>

	<MudNavLink Href="/admin" Icon="@Icons.Material.Filled.Dashboard" IconColor="Color.Info">Admin</MudNavLink>

    <MudNavGroup Icon="@Icons.Material.Filled.Satellite" IconColor="Color.Error" Title="MTG" Expanded="false">
		<AuthorizeView>
			<Authorized>
				<MudNavLink IconColor="Color.Tertiary" Match="NavLinkMatch.Prefix" Href="/mtg/settings" Icon="@Icons.Material.Filled.Settings">Settings</MudNavLink>
				<MudNavLink IconColor="Color.Tertiary" Match="NavLinkMatch.Prefix" Href="/mtg/dashboard" Icon="@Icons.Material.Filled.Analytics">Dashboard</MudNavLink>
			</Authorized>
		</AuthorizeView>

		<MudNavLink IconColor="Color.Primary" Match="NavLinkMatch.Prefix" Href="/mtg/sets/all" Icon="@Icons.Material.Filled.OilBarrel">All Sets</MudNavLink>

		<AuthorizeView>
			<Authorized>
				<MudNavLink IconColor="Color.Primary" Match="NavLinkMatch.Prefix" Href="/mtg/sets/collecting" Icon="@Icons.Material.Filled.Anchor">Collecting Sets</MudNavLink>
				<MudNavLink IconColor="Color.Primary" Match="NavLinkMatch.Prefix" Href="/mtg/sets/pinned" Icon="@Icons.Material.Filled.PushPin">Pinned Sets</MudNavLink>
				<MudNavGroup IconColor="Color.Warning" Icon="@Icons.Material.Filled.FormatListBulleted" Title="Custom Sets">
					<MudNavLink IconColor="Color.Warning" Match="NavLinkMatch.Prefix" Href="/mtg/customsets" Icon="@Icons.Custom.Uncategorized.FolderOpen">View Custom Sets</MudNavLink>
					<MudNavLink IconColor="Color.Warning" Match="NavLinkMatch.Prefix" Href="/mtg/customsets/Create" Icon="@Icons.Material.Filled.UploadFile">Create Custom Set</MudNavLink>
				</MudNavGroup>
				<MudNavLink IconColor="Color.Surface" Match="NavLinkMatch.Prefix" Href="/mtg/customsets/" Icon="@Icons.Material.Filled.Fort">Drafting</MudNavLink>
			</Authorized>
		</AuthorizeView>
    </MudNavGroup>
</MudNavMenu>
